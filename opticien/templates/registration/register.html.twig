{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div style="
    max-width: 350px;
    margin: 64px auto 0 auto;
    background: rgba(255,255,255,0.82);
    border-radius: 2rem;
    box-shadow: 0 8px 32px 0 rgba(31,38,135,0.11);
    backdrop-filter: blur(16px) saturate(170%);
    border: 1.2px solid #e4e8ec;
    padding: 2.2rem 2rem 1.5rem 2rem;
    text-align: center;
">
    <h2 style="font-weight: 700; color: #0b7285; letter-spacing:0.02em; margin-bottom: 2rem;">Créer un compte</h2>

    {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.email, {
            attr: {
                placeholder: 'Email',
                style: 'width:90%; margin-bottom:1rem; padding:0.7rem 1rem; border-radius:1rem; border:1px solid #ccd6f6; background:rgba(250,250,255,0.90); font-size:1.05rem;'
            }
        }) }}

        {{ form_row(registrationForm.plainPassword, {
            attr: {
                placeholder: 'Mot de passe',
                style: 'width:90%; margin-bottom:1.5rem; padding:0.7rem 1rem; border-radius:1rem; border:1px solid #ccd6f6; background:rgba(250,250,255,0.90); font-size:1.05rem;'
            }
        }) }}

        <button type="submit" style="
            width:70%;
            padding:0.8rem;
            border-radius:1.2rem;
            border:none;
            background:#7fd4ff;
            color:#186cc3;
            font-weight:600;
            font-size:1.12rem;
            letter-spacing:0.04em;
            box-shadow:0 2px 10px #85d8ce30;
            cursor:pointer;
            transition:background 0.18s;
        ">
            S’inscrire
        </button>

    {{ form_end(registrationForm) }}

    <div style="text-align:center; margin-top:1rem;">
        <a href="{{ path('app_login') }}" class="glass-link">Déjà un compte ? Connectez-vous</a>
    </div>
</div>
{% endblock %}
